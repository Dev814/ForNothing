<h1>Add a freebie</h1>

<%= form_for @freebie do |f| %>
  <div>
    <%= f.label :item %><br>
    <%= f.text_field :item %>
  </div>

  <div>
    <%= f.label :date %><br>
    <%= f.date_field :date %>
  </div>

  <div>
    <%= f.label :location %><br>
    <%= f.text_field :location, placeholder: "ex. New York, NY" %>
  </div>

  <div>
    <%= f.label :description %><br>
    <%= f.text_area :description, placeholder: "Give us the details" %>
  </div>

  <div>
    <%= f.submit "Post" %>
  </div>
<% end %>
