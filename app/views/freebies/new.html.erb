<h1>Tell Us</h1>

<%= form_for @freebie, url: freebies_path do |f| %>
  <p>
    <%= f.label :item %><br>
    <%= f.text_field :item %>
  </p>

  <p>
    <%= f.label :date %><br>
    <%= f.date_field :date %>
  </p>

  <p>
    <%= f.label :location %><br>
    <%= f.text_field :location, placeholder: "ex. New York, NY" %>
  </p>

  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description, placeholder: "Give us the details" %>
  </p>

  <p>
    <%= f.submit "Post" %>
  </p>
<% end %>
